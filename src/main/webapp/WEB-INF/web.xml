    <servlet>
        <servlet-name>nbbs</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>nbbs-servlet.xml</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
